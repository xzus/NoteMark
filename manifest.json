{
  "manifest_version": 3,
  "name": "NoteMark - Save to Notion",
  "version": "1.0.0",
  "description": "Save the current page to your Notion database with one click",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "NoteMark@kevinchenftw.com",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
